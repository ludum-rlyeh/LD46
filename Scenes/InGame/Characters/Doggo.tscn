script/source = "extends KinematicBody2D

const SPEED = 200.0

var attract = Vector2.ZERO

# Called when the node enters the scene tree for the first time.
func _ready():
	add_to_group(\"doggo\")
	set_process_input(true)
	set_physics_process(true)

func _physics_process(delta):
	
	var velocity = Vector2.ZERO
	if Input.is_action_pressed(\"ui_right\") or Input.is_action_pressed(\"ui_left\")\\
		or Input.is_action_pressed(\"ui_down\") or Input.is_action_pressed(\"ui_up\"):
		
		if Input.is_action_pressed(\"ui_right\"):
			if not (Input.is_action_pressed(\"ui_down\") or Input.is_action_pressed(\"ui_up\")):
				if $AnimatedSprite.animation != \"right\": $AnimatedSprite.animation = \"right\"
				if $AnimatedSprite.flip_h: $AnimatedSprite.flip_h = false
			velocity.x += 1.0
		elif Input.is_action_pressed(\"ui_left\"):
			if not (Input.is_action_pressed(\"ui_down\") or Input.is_action_pressed(\"ui_up\")):
				if $AnimatedSprite.animation != \"right\": $AnimatedSprite.animation = \"right\"
				if not $AnimatedSprite.flip_h: $AnimatedSprite.flip_h = true
			velocity.x -= 1.0

		if Input.is_action_pressed(\"ui_down\"):
			if $AnimatedSprite.animation != \"down\": $AnimatedSprite.animation = \"down\"
			if $AnimatedSprite.flip_h: $AnimatedSprite.flip_h = false
			velocity.y += 1.0
		elif Input.is_action_pressed(\"ui_up\"):
			if $AnimatedSprite.animation != \"up\": $AnimatedSprite.animation = \"up\"
			if $AnimatedSprite.flip_h: $AnimatedSprite.flip_h = false
			velocity.y -= 1.0

		velocity = velocity.normalized() * SPEED
		
	# Doggo tracted by the human
	if attract != Vector2.ZERO :
		velocity += attract
		# TODO: animation attracted
	
	if velocity != Vector2.ZERO:
		Events.emit_signal(\"moved_signal\", self.position)
		var collision = self.move_and_collide(velocity * delta)
		if collision :
			velocity = velocity.slide(collision.normal)
			self.move_and_slide(velocity)
		
		if not $AnimatedSprite.playing:
			$AnimatedSprite.play()
	else:
		$AnimatedSprite.stop()

func set_attract(var attract):
	self.attract = attract
"

